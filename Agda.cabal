    --
    -- mtl >= 2.2 && < 2.2.1 doesn't export Control.Monad.Except.
    , mtl >= 2.1.1 && <= 2.1.3.1 || >= 2.2.1 && < 2.3
    , QuickCheck >= 2.8 && < 2.9
    , parallel >= 3.2.0.4 && < 3.3
