name: hTags
version: 0.1.4
cabal-version: >= 1.8
author: Ulf Norell, Nils Anders Danielsson, Andreas Abel
build-type: Simple
tested-with: GHC == 8.0.2
             GHC == 8.2.2
             GHC == 8.4.4
             GHC == 8.6.5
             GHC == 8.8.4
             GHC == 8.10.3

executable hTags
  main-is: Main.hs
  other-modules: Tags

  build-depends:  base >= 4.9.0.0 && < 4.15
                , Cabal >= 1.24.0.0  && < 3.3
                , containers >= 0.5.7.1 && < 0.7
                , directory >= 1.2.6.2 && < 1.4
                , filepath >= 1.4.1.0 && < 1.5
                , ghc >= 8.0.2 && < 8.11
                , mtl >= 2.2.1 && < 2.3
                , process >= 1.4.2.0 && < 1.7
                , strict >= 0.3.2 && < 0.5

  ghc-options: -fwarn-incomplete-patterns
