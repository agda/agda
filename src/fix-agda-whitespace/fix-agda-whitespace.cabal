name:            fix-agda-whitespace
version:         0.0.1
cabal-version:   >= 1.8
build-type:      Simple
description:     Fixes whitespace issues for Agda sources.
tested-with:     GHC == 7.8.3

executable fix-agda-whitespace
  hs-source-dirs:   .
  main-is:          FixWhitespace.hs
  build-depends:
    base >= 4.2 && < 4.8
    , directory >= 1.2 && < 1.3
    , filemanip == 0.3.*
    , text >= 0.10 && < 1.2
